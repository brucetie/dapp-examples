                        },
                        {
                            "id": 101,
                            "requestType": "service",
                            "description": "Zippy Description text for id=101",
                            "status": "open",
                            "priority": "2-medium",
                            "requestedBy": "jsmith@gmail.com",
                            "requestedFinishDate": "2013-07-20",
                            "assignedTo": "suestatler@gmail.com",
                            "actualFinishDate": null,
                            "estimatedUnits": 0,
